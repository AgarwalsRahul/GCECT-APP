<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pageDesc"
            type="String" />
        <variable
            name="pageTitle"
            type="String" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/pageTopFl"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:alpha="0.8"
            android:background="@drawable/home_header_college_img">

            <TextView
                android:id="@+id/txtPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="58dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@{pageTitle}"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold" />
        </FrameLayout>

            <ImageView
                android:id="@+id/gcectAboutUsImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="75dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/rounded_corner"
                app:shapeAppearanceOverlay="@style/curved"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gcectAboutUsImage"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@{pageDesc}"
                    android:textAlignment="center"
                    android:textColor="#000062"
                    android:textSize="18sp"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</layout>